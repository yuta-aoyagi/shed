all:
	echo "usage: make {mount|umount|sshd}" >&2

mount:
	do_mount() { mount -o acl,binary "@drive_letter@:@path_to_another_root@$$1" "$$1"; } && \
	  do_mount /etc/opt/openssh && do_mount /var/opt/openssh

umount:
	umount /etc/opt/openssh
	umount /var/opt/openssh

sshd:
	x=`ruby -rtime --disable gems -e 'puts Time.now.utc.iso8601(9).delete("-:")'` && \
	  nohup ash sshd.sh </dev/null >"/var/opt/openssh/log/$$x-stdout.txt" \
	  2>"/var/opt/openssh/log/$$x-stderr.txt" &
